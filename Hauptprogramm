#include <iostream>
#include <string>
#include "Transportmittel.h"

using namespace std;

int main()
{
	//Basisklasse testen:
	Transportmittel T_1{ 1.8, 2.1 };
	T_1.bewegen("Norden");

	cout << "Hoehe von T_1: " << T_1.gethoehe() << "m" << endl;
	cout << "Breite des Transportmittels: " << T_1.getbreite() << "m" << endl;

	//abgeleitete Klassen testen:
	Landtransportmittel L_1{ 1.2, 0.5, 2 };
	L_1.bewegen("Osten");
	L_1.fahren(12);
	L_1.schieben(4);
	
	cout << "Hoehe von L_1: " << L_1.gethoehe() << "m" << endl;
	cout << "Breite von L_1: " << L_1.getbreite() << "m" << endl;

	Wassertransportmittel W_1{ 3.4, 2.7, 1.04 };
	W_1.fahren("Norden");
	W_1.anlegen("Hamburg");
	W_1.ablegen("Palma de Mallorca");
	


};
